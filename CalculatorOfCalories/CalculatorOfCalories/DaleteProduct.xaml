<Window x:Class="CalculatorOfCalories.DaleteProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorOfCalories"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Calories calculator" Height="100" Width="300" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Icon="/Icon.png"
        Style="{DynamicResource ResourceKey=Theme}">
    <UniformGrid Columns="3">
        <ComboBox VerticalAlignment="Center" Margin="10" Name="Products"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                     material:HintAssist.Hint="Name of product" SelectionChanged="Products_SelectionChanged"/>
        <Button Content="Cancel" Margin="10" Name="Cancel" Click="Cancel_Click"/>
        <Button IsEnabled="False" Content="Delete" Margin="10" Name="Delete" Click="Delete_Click"/>
    </UniformGrid>
</Window>
