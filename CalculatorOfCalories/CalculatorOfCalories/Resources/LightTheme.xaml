<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Theme" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="WhiteSmoke"/>
    </Style>
    <Style x:Key="FontBlockColor" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style x:Key="FontRadioColor" TargetType="{x:Type RadioButton}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style x:Key="FontListColor" TargetType="{x:Type ListBox}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
</ResourceDictionary>